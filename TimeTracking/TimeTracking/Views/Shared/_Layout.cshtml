<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Scripts/jquery-1.8.2.min.js")"></script>
        <script src="@Url.Content("~/Scripts/modernizr-2.6.2.js")"></script>
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("Time Tracking", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("PROJECTs", "Index", "PROJECTs")</li>
                            <li>@Html.ActionLink("WORKERs", "Index", "WORKERs")</li>
                            <li>@Html.ActionLink("WORKTIMEs", "Index", "WORKTIMEs")</li>
                            <li>@Html.ActionLink("PROJECTTIMETOTALs", "Index", "PROJECTTIMETOTALs")</li>
                            <li>@Html.ActionLink("WORKERTIMETOTALs", "Index", "WORKERTIMETOTALs")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; Mauro Barešić @DateTime.Now.Year . All rights reserved</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
